{
  "name": "rss-feed",
  "description": "RSS feed",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "6.4.0"
  },
  "dependencies": {
    "babelify": "7.3.0",
    "react": "15.3.1",
    "react-dom": "15.3.1"
  },
  "devDependencies": {
    "babel": "6.5.2",
    "babel-preset-es2015": "6.14.0",
    "babel-preset-react": "6.11.1",
    "browserify": "13.1.0",
    "uglifyjs": "2.4.10",
    "watchify": "3.7.0"
  },
  "babel": {
    "presets": [
      "react",
      "es2015"
    ]
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "build-css": "mkdir -p .generated && cat styles/*.css > .generated/style.css",
    "watch-css": "node_modules/.bin/watch \"npm run build-css\" styles/",
    "build-js": "browserify src/main.js -o .generated/bundle.js",
    "watch-js": "watchify src/main.js --debug -o .generated/bundle.js -v",
    "build": "mkdir -p dist && npm run build-js && npm run build-css",
    "build-min": "npm run build && uglifyjs --compress -o .generated/bundle.js .generated/bundle.js",
    "watch": "npm run watch-js & npm run watch-css"
  }
}
